            <string>if( !isActive ) {
    exit;
}

//animate player sprite
playerIndex = (playerIndex + 1/5) mod 4;

if (scrButtonCheckPressed(global.menuUpButton))
{
    audio_play_sound(global.menuSound,0,false);
    select -= 1;
    if(select &lt; 0)
        select = optionsNum-1;
}
else if (scrButtonCheckPressed(global.menuDownButton))
{
    audio_play_sound(global.menuSound,0,false);
    select += 1;
    if(select &gt; optionsNum-1)
        select = 0;
}

else if( scrButtonCheckPressed(global.menuAcceptButton1) || scrButtonCheckPressed(global.menuAcceptButton2 ) )
{
    if( select == 0 ) {    //toggle mute music
        scrToggleMusic();
    } else if( select == 2 ) {   //toggle vsync mode
        global.vsyncMode = !global.vsyncMode;
        
        scrSetVsync();
    } else if( select == 3 ) {   //go to the keyboard controls menu
        scrSaveConfig();    //save changes
        global.menuSelectPrev[1] = select;
        with( oControllerInputMenu ) { instance_destroy(); }
        if( !instance_exists( oKeyboardInputMenu ) ) {
            instance_create( -970, 305, oKeyboardInputMenu );
        }
        oMenuTransitionController.targetX = oKeyboardInputMenu.baseX;
        oKeyboardInputMenu.alarm[0] = 1;
        isActive = false;
        exit;
    } else if( select == 4 ) {   //go to the controller options menu
        scrSaveConfig();    //save changes
        global.menuSelectPrev[1] = select;
        with( oKeyboardInputMenu ) { instance_destroy(); }
        if( !instance_exists( oControllerInputMenu ) ) {
            instance_create( -970, 305, oControllerInputMenu );
        }
        oMenuTransitionController.targetX = oControllerInputMenu.baseX;
        oControllerInputMenu.alarm[0] = 1;
        isActive = false;
        exit;
    } else if( select == 5 ) {  //save changes and go back
        scrSaveConfig();
        global.menuSelectPrev[1] = 0;
        oMenuTransitionController.targetX = oMainMenu.baseX;
        oMainMenu.alarm[0] = 1;
        isActive = false;
        exit;
    }
}


if (select == 1)
{
    if (scrButtonCheck(global.menuRightButton))  //raise volume
    {
        if (global.volumeLevel &lt; 100)
            global.volumeLevel += 1;
        
        audio_master_gain(global.volumeLevel/100);  //set master gain
    }
    else if (scrButtonCheck(global.menuLeftButton))  //lower volume
    {
        if (global.volumeLevel &gt; 0)
            global.volumeLevel -= 1;
        
        audio_master_gain(global.volumeLevel/100);  //set master gain
    }
}
